       A.DELY_GB,
       A.DELY_NAME,
       A.WB_NO,
       A.FREIGHT_AMT,
       A.WH_LOC,
       A.BATCH_SEQ,
       A.CUSTOMER_GROUP,
       A.MD_CODE,
       A.SUB_MERCHANT_NO,
       A.VEN_DELY_DATE,
       A.VEN_DELY_YN,
       A.ORDER_POINT_FLAG,
       A.ORDER_SPLIT_FLAG,
       A.WORKORDER_NO,
       A.INVOICE_RETURN_FLAG,
       A.GIFT_AMT_YHQ,
       A.GIFT_AMT_DJQ,
       A.GIFT_AMT_WBYHQ,
       A.JF_AMT,
       A.YFK_AMT,
       A.XYK_AMT,
       A.POINT_CHANGE_RATE,
       A.ECC_ORDER_NO,
       A.MAIN_PAM_GB,
       A.MAIN_PAY_AMT,
       A.PAY_ADJUSTMEN,
       A.BUY_PRICE,
       A.ZVBELN_INPUT
  FROM OD_ORDER_ITEM A
 WHERE A.SAVEAMT IS NULL
    OR A.SAVEAMT_PROM IS NULL
 ORDER BY A.LAST_PROC_DATE DESC, A.INSERT_DATE DESC, A.ORDER_DATE;

