--1.
UPDATE OD_ORDER_ITEM A
   SET A.SAVEAMT      = NVL(A.SAVEAMT, 0) / 200,
       A.SAVEAMT_PROM = NVL(A.SAVEAMT_PROM, 0) / 200;
COMMIT;


SELECT COUNT(1) FROM OD_ORDER_ITEM A;
