SELECT 'ALTER INDEX DATA_ACQUISITION_ITEM_BASE_I1 REBUILD PARTITION ' ||
       A.PARTITION_NAME S
  FROM DBA_SEGMENTS A
 WHERE A.OWNER = 'DW_USER'
   AND A.SEGMENT_NAME = 'DATA_ACQUISITION_ITEM_BASE'
 ORDER BY A.PARTITION_NAME;
