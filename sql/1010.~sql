  SELECT A.ORDER_SN, A.PROMONTION_TYPE, COUNT(1)
    FROM OPER_NM_PROMOTION_ORDER_TEST A
   GROUP BY A.ORDER_SN, A.PROMONTION_TYPE
  HAVING COUNT(1) > 1;

