CREATE OR REPLACE PACKAGE YJ_OPTIMIZATION IS

  -- AUTHOR  : YANGJIN
  -- CREATED : 2018-07-03 15:50:42
  -- PURPOSE : oracle优化

  PROCEDURE ALTER_TABLE_SHRINK_SPACE(IN_TABLE_NAME IN VARCHAR2);
  /*
  功能名:       ALTER_TABLE_SHRINK_SPACE
  目的:         收缩表的高水位线
  作者:         yangjin
  创建时间：    2017/07/26
  最后修改人：
  最后更改日期：
  */

  PROCEDURE TABLE_OPTIMIZATION;
  /*
  功能名:       TABLE_OPTIMIZATION
  目的:         数据库表优化
  作者:         yangjin
  创建时间：    2017/09/27
  最后修改人：
  最后更改日期：
  */

END YJ_OPTIMIZATION;
/
CREATE OR REPLACE PACKAGE BODY YJ_OPTIMIZATION IS

  PROCEDURE ALTER_TABLE_SHRINK_SPACE(IN_TABLE_NAME IN VARCHAR2) IS
  BEGIN
  
    EXECUTE IMMEDIATE 'ALTER TABLE ' || TO_CHAR(IN_TABLE_NAME) ||
                      ' ENABLE ROW MOVEMENT';
    EXECUTE IMMEDIATE 'ALTER TABLE ' || TO_CHAR(IN_TABLE_NAME) ||
                      ' SHRINK SPACE';
    EXECUTE IMMEDIATE 'ALTER TABLE ' || TO_CHAR(IN_TABLE_NAME) ||
                      ' DISABLE ROW MOVEMENT';
    DBMS_STATS.GATHER_TABLE_STATS(OWNNAME => 'DW_USER',
                                  TABNAME => TO_CHAR(IN_TABLE_NAME),
                                  DEGREE  => 4,
                                  CASCADE => TRUE);
  END ALTER_TABLE_SHRINK_SPACE;

  PROCEDURE TABLE_OPTIMIZATION IS
    S_ETL W_ETL_LOG%ROWTYPE;
  BEGIN
    S_ETL.PROC_NAME  := 'YJ_OPTIMIZATION.TABLE_OPTIMIZATION';
    S_ETL.START_TIME := SYSDATE;
    /*
    每周六14:00开始执行
    */
    --YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('DATA_ACQUISITION_ITEM');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('DATA_ACQUISITION_ITEM_BASE');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('DATA_ACQUISITION_ITEM_CURRENT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('DATA_ACQUISITION_MONTH_NEW');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_ORDER_2');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_ORDER_COMMON');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_ORDER_GOODS');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_P_MANSONG');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_P_MANSONG_GOODS');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_P_XIANSHI');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_P_XIANSHI_GOODS');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_VOUCHER');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_VOUCHER_BATCH');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_GOODS');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_GOODS_COMMON');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('FACT_EC_GOODS_MANUAL');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('KPI_ACTIVE_VID_BASE');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('MEMBER_LABEL_LINK');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('MLOG$_MEMBER_LABEL_LINK');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_GOOD_LABEL_ANALYSIS');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_NM_PROMOTION_ITEM_REPORT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_NM_PROMOTION_ORDER_REPORT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_NM_VOUCHER_REPORT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_PRODUCT_DAILY_REPORT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('OPER_PRODUCT_PVUV_DAILY_REPORT');
    YJ_OPTIMIZATION.ALTER_TABLE_SHRINK_SPACE('PUSH_MSG_LOG');
  
    S_ETL.END_TIME     := SYSDATE;
    S_ETL.ETL_STATUS   := 'SUCCESS';
    S_ETL.ERR_MSG      := '无输入参数';
    S_ETL.ETL_DURATION := TRUNC((S_ETL.END_TIME - S_ETL.START_TIME) * 86400);
    SP_SBI_W_ETL_LOG(S_ETL);
  EXCEPTION
    WHEN OTHERS THEN
      S_ETL.END_TIME   := SYSDATE;
      S_ETL.ETL_STATUS := 'FAILURE';
      S_ETL.ERR_MSG    := SQLERRM;
      SP_SBI_W_ETL_LOG(S_ETL);
      RETURN;
  END TABLE_OPTIMIZATION;

END YJ_OPTIMIZATION;
/
